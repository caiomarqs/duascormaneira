{
    "compilerOptions": {
        "target": "ES6",
        "outDir": "dist",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true,
        "module": "CommonJS",
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ]
}